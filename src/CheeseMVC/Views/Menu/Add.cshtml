@{
	ViewBag.Title = "New Menu";
}

<form asp-controller="Menu" asp-action="Add" method="post">
	<div class="form-group">
		<label asp-for="Name"/>
		<input class="form-control" asp-for="Name" />
		<span asp-validation-for="Name"></span>
	</div>

	<input type="submit" value="Create Menu" />
</form>
